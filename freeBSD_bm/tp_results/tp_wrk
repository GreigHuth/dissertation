#!/bin/bash

# $1 is the # of threads
# $2 is the # of connections
# $3 is the duration of the test
#TODO



if [ $# -lt 3 ]
then
    echo "USAGE: run_wrk <threads> <connections> <duration>"
    exit
fi




for j in {1..3}
do
    echo "running test. Run: $j"
    wrk --latency -t$1 -c$2 -d$3s -s ./wrk2csv.lua http://192.168.11.5:1234/index.html
    sleep 1
done

